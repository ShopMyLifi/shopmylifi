<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context="com.example.shopmylifi.DisplayListeCourse"
    tools:ignore="MergeRootFrame" >

    <RelativeLayout
        android:id="@+id/container_listes_courses2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/fond_menu" >

        <ImageButton
            android:id="@+id/liste_course_button_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@null"
            android:contentDescription="@string/desc_button_home"
            android:src="@drawable/home" />

        <ImageView
            android:id="@+id/liste_course_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@null"
            android:contentDescription="@string/desc_bandeau_liste_course"
            android:src="@drawable/bandeau_liste_course" />

        <ImageButton
            android:id="@+id/liste_course_button_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:contentDescription="@string/desc_button_settings"
            android:src="@drawable/reglage" />
    </RelativeLayout>

    <ImageButton
        android:id="@+id/liste_course_button_ad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/container_listes_courses2"
        android:background="@null"
        android:contentDescription="@string/desc_button_ad_article"
        android:src="@drawable/add_article" />

    <ListView
        android:id="@+id/id_display_liste_course"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/liste_course_pub"
        android:layout_below="@id/liste_course_button_ad" >
    </ListView>

    <ImageView
        android:id="@id/liste_course_pub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:adjustViewBounds="true"
        android:background="#ffffff"
        android:contentDescription="@string/desc_bandeau_pub"
        android:padding="4dp"
        android:src="@drawable/bandeau_pub2" />

</RelativeLayout>